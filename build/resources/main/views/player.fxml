<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controllers.PlayerController"
            styleClass="root">
    
    <!-- Left Sidebar -->
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <padding><Insets top="20" right="10" bottom="20" left="10"/></padding>
            
            <!-- Navigation -->
            <Button text="Home" styleClass="nav-button" onAction="#showAllSongs"/>
            <Button text="Search" styleClass="nav-button"/>
            <Button text="Your Library" styleClass="nav-button"/>
            
            <!-- Playlists -->
            <VBox spacing="5" styleClass="playlist-section">
                <Label text="PLAYLISTS" styleClass="section-header"/>
                <Button text="Liked Songs" styleClass="playlist-button" onAction="#showLikedSongs"/>
                <ListView fx:id="playlistListView" VBox.vgrow="ALWAYS"/>
            </VBox>
        </VBox>
    </left>
    
    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            
            <!-- Search Bar -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" promptText="What do you want to play?" 
                          styleClass="search-field" HBox.hgrow="ALWAYS" onAction="#search"/>
                <Button text="Search" onAction="#search"/>
            </HBox>
            
            <!-- Now Playing -->
            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="albumArt" fitWidth="300" fitHeight="300"/>
                <Label fx:id="songLabel" styleClass="song-title"/>
                <Label fx:id="artistLabel" styleClass="artist-name"/>
                <Button fx:id="likeButton" text="â™¡" onAction="#toggleLike" styleClass="like-btn"/>
            </VBox>
        </VBox>
    </center>
    
    <!-- Player Controls (Bottom) -->
    <bottom>
        <VBox styleClass="player-controls">
            <HBox alignment="CENTER" spacing="20">
            <Button text="Reload UI" onAction="#reloadUI"/>
                <Button text="â®" styleClass="control-button" onAction="#previousTrack"/>
                <Button text="â–¶" styleClass="play-button" onAction="#play"/>
                <Button text="â¸" onAction="#pause"/>
                <Button text="â­" styleClass="control-button" onAction="#nextTrack"/>
            </HBox>
            
            <!-- Progress Bar -->
            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="currentTimeLabel" styleClass="time-label"/>
                <Slider fx:id="musicSlider" styleClass="progress-bar" HBox.hgrow="ALWAYS"/>
                <Label fx:id="totalTimeLabel" styleClass="time-label"/>
            </HBox>
            
            <!-- Volume -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label text="ðŸ”Š" styleClass="volume-icon"/>
                <Slider fx:id="volumeSlider" prefWidth="100" styleClass="volume-slider"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>